<!-- res/layout/activity_numbers.xml -->
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <!-- صورة تعليمية -->
    <ImageView
        android:id="@+id/imageNumber"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/number_1"
        android:contentDescription="Number Image" />

    <!-- عرض الرقم والنطق -->
    <TextView
        android:id="@+id/textNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textColor="#000000"
        android:text="1"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:onClick="speakNumber" />

    <!-- زر الرقم السابق -->
    <Button
        android:id="@+id/btnPrevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:onClick="previousNumber"
        android:layout_marginTop="20dp"/>

    <!-- زر الرقم التالي -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:onClick="nextNumber"
        android:layout_marginTop="20dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>
